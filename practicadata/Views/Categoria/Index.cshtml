@model IEnumerable<practicadata.Models.Categoria>

@{
    ViewData["Title"] = "buscar cliente";
}

<style>
    .custom-btn {
        transition: all 0.3s ease;
        border: none;
        min-width: 80px;
    }

    .btn-create {
        background-color: #D1E7FF; /* Azul pastel */
        color: #0d6efd;
    }

    .btn-edit {
        background-color: #FFF3CD; /* Amarillo pastel */
        color: #ffc107;
    }

    .btn-details {
        background-color: #D4EDDA; /* Verde pastel */
        color: #198754;
    }

    .btn-delete {
        background-color: #F8D7DA; /* Rojo pastel */
        color: #dc3545;
    }

    .card-header {
        background-color: #f8f9fa;
    }
</style>

<div class="container mt-4">
    <div class="card border-0 shadow-lg">
        <div class="card-header border-0 bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0 text-secondary"><i class="bi bi-search me-2"></i>Búsqueda de Categorías</h3>
                <button class="btn btn-create custom-btn" onclick="window.location.href='@Url.Action("Create")'">
                    <i class="bi bi-plus-circle me-2"></i>Nueva Categoría
                </button>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-edit custom-btn btn-sm me-2"
                                                onclick="window.location.href='@Url.Action("Edit", new { id = item.Id })'">
                                            <i class="bi bi-pencil-square me-1"></i>Editar
                                        </button>
                                        <button type="button" class="btn btn-details custom-btn btn-sm me-2"
                                                onclick="window.location.href='@Url.Action("Details", new { id = item.Id })'">
                                            <i class="bi bi-eye me-1"></i>Detalles
                                        </button>
                                        <button type="button" class="btn btn-delete custom-btn btn-sm"
                                                onclick="window.location.href='@Url.Action("Delete", new { id = item.Id })'">
                                            <i class="bi bi-trash me-1"></i>Eliminar
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>