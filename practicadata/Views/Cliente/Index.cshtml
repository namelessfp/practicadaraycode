@model IEnumerable<practicadata.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<style>
    .custom-btn {
        transition: all 0.3s ease;
        border: none;
    }

    .btn-edit {
        background-color: #FFF3CD; /* Amarillo pastel */
        color: #856404;
    }

    .btn-details {
        background-color: #D4EDDA; /* Verde pastel */
        color: #155724;
    }

    .btn-delete {
        background-color: #F8D7DA; /* Rojo pastel */
        color: #721C24;
    }

    .btn-create {
        background-color: #D1ECF1; /* Azul pastel */
        color: #0C5460;
    }

    .table-hover tbody tr:hover {
        background-color: #F8F9FA;
    }
</style>

<div class="container mt-4">
    <h1 class="mb-4 text-muted">Client Management</h1>

    <div class="mb-4">
        <button class="btn btn-create custom-btn" onclick="window.location.href='@Url.Action("Create")'">
            <i class="bi bi-plus-circle"></i> Create New
        </button>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-striped">
                <thead class="thead-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                        <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-edit custom-btn btn-sm me-2"
                                            onclick="window.location.href='@Url.Action("Edit", new { id = item.Id })'">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button type="button" class="btn btn-details custom-btn btn-sm me-2"
                                            onclick="window.location.href='@Url.Action("Details", new { id = item.Id })'">
                                        <i class="bi bi-info-circle"></i> Details
                                    </button>
                                    <button type="button" class="btn btn-delete custom-btn btn-sm"
                                            onclick="window.location.href='@Url.Action("Delete", new { id = item.Id })'">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>